<%= form_for @article do |f| %>

<% if @article.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@article.errors.count, "error") %> prohibited
    this article from being saved:
  </h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<p>
  <%= f.label :title %><br>
  <%= f.text_field :title, :placeholder => "Title of your blog post", :size => "30x10" %>
</p>

<p>
  <%= f.label :text %><br>
  <%= f.text_area :text, :placeholder => "What do you want to say?", :size => "30x10" %>
</p>

<p>
  <%= f.label :image %><br>
  <%= f.text_area :image, :placeholder => "Please use a direct link", :size => "30x10"  %>
</p>

<p>
  <%= f.submit %>
</p>

<% end %>
